<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/25" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.openjfx.Controllers.MenuItemEditController"
      spacing="12" alignment="CENTER_LEFT" style="-fx-background-color: #f8f8f8;"
      prefWidth="700" prefHeight="480">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Chỉnh sửa danh mục" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Bảng danh sách món -->
    <TableView fx:id="tableMenuItem" prefHeight="250">
        <columns>
            <TableColumn fx:id="colItemName" text="Tên món" prefWidth="220"/>
            <TableColumn fx:id="colCurrentPrice" text="Giá tiền" prefWidth="100"/>
        </columns>
    </TableView>

    <!-- Khu vực chỉnh sửa -->
    <GridPane hgap="10" vgap="10">
        <Label text="Tên món:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtItemName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Giá tiền:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCurrentPrice" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Lưu thay đổi" onAction="#handleSave"/>
        <Button text="Hủy" onAction="#handleCancel"/>
    </HBox>

</VBox>