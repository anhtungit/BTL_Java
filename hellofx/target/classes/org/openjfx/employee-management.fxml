<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="org.openjfx.EmployeeManagementController">
    
    <!-- Tiêu đề -->
    <Label text="Quản lý nhân viên" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <!-- Container cho các nút chức năng -->
    <HBox spacing="20" alignment="CENTER">
        <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #e3f2fd; -fx-padding: 15; -fx-background-radius: 5;">
            <Label text="Xem danh sách nhân viên" style="-fx-font-weight: bold;"/>
            <Button fx:id="btnViewEmployees" text="Xem danh sách nhân viên" 
                    onAction="#showEmployeeList"
                    prefWidth="200"
                    style="-fx-background-color: #2196f3; -fx-text-fill: white;"/>
        </VBox>

        <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #e8f5e9; -fx-padding: 15; -fx-background-radius: 5;">
            <Label text="Thêm nhân viên" style="-fx-font-weight: bold;"/>
            <Button fx:id="btnAddEmployee" text="Thêm nhân viên"
                    onAction="#showAddEmployee"
                    prefWidth="200"
                    style="-fx-background-color: #4caf50; -fx-text-fill: white;"/>
        </VBox>

        <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #fff3e0; -fx-padding: 15; -fx-background-radius: 5;">
            <Label text="Chỉnh sửa nhân viên" style="-fx-font-weight: bold;"/>
            <Button fx:id="btnEditEmployee" text="Chỉnh sửa nhân viên"
                    onAction="#showEditEmployee"
                    prefWidth="200"
                    style="-fx-background-color: #ff9800; -fx-text-fill: white;"/>
        </VBox>
        
        <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #ffebee; -fx-padding: 15; -fx-background-radius: 5;">
            <Label text="Xóa nhân viên" style="-fx-font-weight: bold;"/>
            <Button fx:id="btnDeleteEmployee" text="Xóa nhân viên"
                    onAction="#showDeleteEmployee"
                    prefWidth="200"
                    style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
        </VBox>
    </HBox>

    <!-- Ô tìm kiếm -->
    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="searchField" promptText="Nhập tên nhân viên cần tìm..." prefWidth="400"/>
        <Button fx:id="btnSearch" text="Tìm kiếm"
                onAction="#searchEmployees"
                style="-fx-background-color: #9e9e9e; -fx-text-fill: white;"/>
    </HBox>

    <!-- Vùng hiển thị nội dung -->
    <StackPane fx:id="contentArea" VBox.vgrow="ALWAYS" style="-fx-background-color: #f5f5f5;">
        <!-- Nội dung sẽ được thêm vào đây động -->
    </StackPane>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</VBox>