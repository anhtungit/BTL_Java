<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<DialogPane fx:id="dialogPane" prefHeight="400.0" prefWidth="500.0" 
            xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="org.openjfx.Controllers.PaymentDialogController">
    <header>
        <Label fx:id="headerLabel" text="Thanh toán bàn" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    </header>
    <content>
        <VBox spacing="15.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            
            <!-- Bảng chi tiết đơn hàng -->
            <TableView fx:id="orderTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="itemNameColumn" text="Tên món" prefWidth="200.0"/>
                    <TableColumn fx:id="quantityColumn" text="SL" prefWidth="80.0"/>
                    <TableColumn fx:id="priceColumn" text="Thành tiền" prefWidth="120.0"/>
                </columns>
            </TableView>
            
            <!-- Thông tin tổng tiền và thanh toán -->
            <GridPane vgap="10" hgap="10">
                <Label text="Tổng:" style="-fx-font-weight: bold;"
                       GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label fx:id="totalLabel" text="0đ" style="-fx-font-weight: bold;"
                       GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                       
                <Label text="Khách đưa:" style="-fx-font-weight: bold;"
                       GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="amountPaidField" promptText="Nhập số tiền"
                          GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                          
                <Label text="Thối lại:" style="-fx-font-weight: bold;"
                       GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <Label fx:id="changeLabel" text="0đ" style="-fx-font-weight: bold;"
                       GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            </GridPane>
        </VBox>
    </content>
</DialogPane>