<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" hgap="10" vgap="12" prefWidth="500.0" prefHeight="400.0">
    <children>
        <Label text="* Họ và tên:" />
        <TextField fx:id="addFullName" GridPane.columnIndex="1" />
        <Label text="Địa chỉ:" GridPane.rowIndex="1" />
        <TextField fx:id="addAddress" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label text="* Chức vụ:" GridPane.rowIndex="2" />
        <TextField fx:id="addPosition" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Label text="* Lương:" GridPane.rowIndex="3" />
        <TextField fx:id="addSalary" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Label text="* Số điện thoại:" GridPane.rowIndex="4" />
        <TextField fx:id="addPhone" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <Label text="Tên đăng nhập:" GridPane.rowIndex="5" />
        <TextField fx:id="addUsername" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        <Label text="Mật khẩu:" GridPane.rowIndex="6" />
        <PasswordField fx:id="addPassword" GridPane.columnIndex="1" GridPane.rowIndex="6" />
        <Button text="Thêm" onAction="#empAddSubmit" GridPane.rowIndex="7" />
        <Button text="Hủy" onAction="#empBackToList" GridPane.columnIndex="1" GridPane.rowIndex="7" />
    </children>
    <padding>
        <Insets top="20" bottom="20" left="20" right="20" />
    </padding>
</GridPane>


