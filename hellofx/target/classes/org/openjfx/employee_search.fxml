<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" prefWidth="500.0" prefHeight="400.0">
    <top>
        <VBox spacing="10" BorderPane.alignment="CENTER_LEFT">
            <children>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <TextField fx:id="searchField" promptText="Tìm theo tên..." />
                        <Button text="Tìm kiếm" onAction="#empSearchSubmit" />
                    </children>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <CheckBox fx:id="filterHighSalaryCheckBox" text="Lương trên 10.000.000 VNĐ" onAction="#empSearchSubmit" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets top="10" bottom="10" left="10" right="10" />
            </padding>
        </VBox>
    </top>
    <center>
        <TableView fx:id="searchTable">
            <columns>
                <TableColumn text="Họ tên" prefWidth="250" fx:id="sColName" />
                <TableColumn text="Chức vụ" prefWidth="150" fx:id="sColPosition" />
                <TableColumn text="Lương" prefWidth="120" fx:id="sColSalary" />
            </columns>
        </TableView>
    </center>
</BorderPane>


