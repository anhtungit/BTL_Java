<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.Controllers.PrimaryController" prefWidth="1000.0" prefHeight="650.0">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10" BorderPane.alignment="CENTER">
         <children>
            <Label text="Phần mềm quản lý quán cà phê ver 1.0">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets top="5" bottom="5" left="5" right="5" />
         </padding>
      </HBox>
   </top>
   <left>
      <VBox spacing="8" BorderPane.alignment="CENTER" prefWidth="260.0">
         <children>
            <Button fx:id="btnTrangChu" text="Trang chủ" maxWidth="Infinity" onAction="#showTrangChu" />
            <Button fx:id="btnTrangCaNhan" text="Trang cá nhân" maxWidth="Infinity" onAction="#showTrangCaNhan" />
            <Button fx:id="btnQuanLyNhanVien" text="Quản lý nhân viên" maxWidth="Infinity" onAction="#empShowList" />
            <Button fx:id="btnQuanLyBanHang" text="Quản lý bán hàng" maxWidth="Infinity" onAction="#showQuanLyBanHang" />
            <Button fx:id="btnQuanLyTrangThietBi" text="Quản lý trang thiết bị" maxWidth="Infinity" onAction="#noop" />
            <Button fx:id="btnQuanLyKhoHang" text="Quản lý kho hàng" maxWidth="Infinity" onAction="#showQuanLyKhoHang" />
            <Button fx:id="btnQuanLyThucDon" text="Quản lý thực đơn" maxWidth="Infinity" onAction="#showQuanLyThucDon" />
            <Button fx:id="btnQuanLyMarketing" text="Quản lý Marketing" maxWidth="Infinity" onAction="#noop" />
            <Button fx:id="btnQuanLyNganSach" text="Quản lý ngân sách" maxWidth="Infinity" onAction="#showQuanLyNganSach" />
            <Button fx:id="btnQuanLyDuLieu" text="Quản lý dữ liệu" maxWidth="Infinity" onAction="#noop" />
            <Button fx:id="btnThongKeBaoCao" text="Thống kê, báo cáo" maxWidth="Infinity" onAction="#handleReportModule" />
            <Button fx:id="btnGioiThieu" text="Giới thiệu" maxWidth="Infinity" onAction="#noop" />
         </children>
         <padding>
            <Insets top="8" bottom="8" left="8" right="8" />
         </padding>
      </VBox>
   </left>
   <center>
      <VBox spacing="10" BorderPane.alignment="CENTER">
         <children>
            <Label text="Trang chủ">
               <font>
                  <Font name="System" size="16.0" />
               </font>
            </Label>
            <StackPane fx:id="contentPane" prefWidth="700" prefHeight="480" style="-fx-background-color: #ccffff;" />
         </children>
         <padding>
            <Insets top="10" right="10" bottom="10" left="10" />
         </padding>
      </VBox>
   </center>
</BorderPane>
