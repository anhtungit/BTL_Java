<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" alignment="TOP_CENTER"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.openjfx.Controllers.MenuItemController">
    
    <!-- Tiêu đề -->
    <Label text="Quản lý thực đơn"
           style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

    <!-- Lưới chứa các nút chức năng -->
    <GridPane fx:id="buttonPanel" hgap="20" vgap="20" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" prefWidth="250"/>
            <ColumnConstraints halignment="CENTER" prefWidth="250"/>
        </columnConstraints>

        <!-- Xem danh sách -->
        <VBox GridPane.rowIndex="0" GridPane.columnIndex="0" spacing="10" alignment="CENTER"
              style="-fx-background-color: #e3f2fd; -fx-padding: 15; -fx-background-radius: 5;">
            <Label text="Xem danh sách thực đơn" style="-fx-font-weight: bold;"/>
            <Button fx:id="btnViewMenuItem" text="Xem danh sách"
                    prefWidth="200"
                    style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </VBox>

        <!-- Thêm danh mục -->
        <VBox GridPane.rowIndex="0" GridPane.columnIndex="1" spacing="10" alignment="CENTER"
              style="-fx-background-color: #e8f5e9; -fx-padding: 15; -fx-background-radius: 5;">
            <Label text="Thêm danh mục" style="-fx-font-weight: bold;"/>
            <Button fx:id="btnAddMenuItem" text="Thêm danh mục"
                    prefWidth="200"
                    style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </VBox>

        <!-- Chỉnh sửa danh mục -->
        <VBox GridPane.rowIndex="1" GridPane.columnIndex="0" spacing="10" alignment="CENTER"
              style="-fx-background-color: #fff3e0; -fx-padding: 15; -fx-background-radius: 5;">
            <Label text="Chỉnh sửa danh mục" style="-fx-font-weight: bold;"/>
            <Button fx:id="btnEditMenuItem" text="Chỉnh sửa"
                    prefWidth="200"
                    style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </VBox>

        <!-- Xóa danh mục -->
        <VBox GridPane.rowIndex="1" GridPane.columnIndex="1" spacing="10" alignment="CENTER"
              style="-fx-background-color: #ffebee; -fx-padding: 15; -fx-background-radius: 5;">
            <Label text="Xóa danh mục" style="-fx-font-weight: bold;"/>
            <Button fx:id="btnDeleteMenuItem" text="Xóa danh mục"
                    prefWidth="200"
                    style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </VBox>

        <!-- Tìm kiếm danh mục -->
        <VBox GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2"
              spacing="10" alignment="CENTER"
              style="-fx-background-color: #ede7f6; -fx-padding: 15; -fx-background-radius: 5;">
            <Label text="Tìm kiếm danh mục" style="-fx-font-weight: bold;"/>
            <Button fx:id="btnSearchMenuItem" text="Tìm kiếm danh mục"
                    prefWidth="200"
                    style="-fx-background-color: #673ab7; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </VBox>
    </GridPane>

    <!-- Vùng nội dung -->
    <StackPane fx:id="contentPane" VBox.vgrow="ALWAYS"
               style="-fx-background-color: #f5f5f5; -fx-background-radius: 5;"/>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</VBox>