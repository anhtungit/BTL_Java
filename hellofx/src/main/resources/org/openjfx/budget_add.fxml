<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.openjfx.Controllers.BudgetAddController"
      spacing="12" alignment="TOP_LEFT"
      style="-fx-background-color: #f8f8f8;"
      prefWidth="700" prefHeight="480">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Thêm chi tiêu" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Bảng nhập chi tiêu -->
    <TableView fx:id="tableExpenses" editable="true" prefHeight="300">
        <columns>
            <TableColumn fx:id="colDate" text="Ngày" prefWidth="150"/>
            <TableColumn fx:id="colDescription" text="Khoản chi" prefWidth="300"/>
            <TableColumn fx:id="colAmount" text="Số tiền (₫)" prefWidth="150"/>
        </columns>
    </TableView>

    <!-- Khu vực nút -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Lưu" fx:id="btnSave" onAction="#handleSave"/>
        <Button text="Hủy" fx:id="btnCancel" onAction="#handleCancel"/>
    </HBox>

</VBox>